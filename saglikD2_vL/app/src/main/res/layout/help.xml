<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <include layout="@layout/top_bar_yardim"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ikclogo"
            android:layout_centerInParent="true"
            android:id="@+id/ikclogo"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/ikclogo"
            android:background="@color/bordo"
            android:layout_centerHorizontal="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:id="@+id/zz_1"
                android:text="İletişim:   "
                android:textColor="@color/white"
                android:textSize="19sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/zz_1"
                android:layout_centerVertical="true"
                android:text="ikcsoftware@gmail.com"
                android:textSize="24sp"
                android:textColor="@color/white"/>
        </RelativeLayout>



    </RelativeLayout>

</RelativeLayout>